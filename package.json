{
  "name": "customers-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:server": "node server.js",
    "start:server:watch": "nodemon server.js",
    "migrate": "db-migrate up",
    "start": "npm-run-all migrate start:server",
    "start-watch": "npm-run-all migrate start:server:watch",
    "start-all-services": "docker-compose up",
    "tests:setup-db": "docker-compose up -d test_db",
    "tests:migrate-db": "db-migrate up -e test",
    "test": "jest",
    "lint": "semistandard --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setupTests.js"],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "semistandard": {
    "env": ["node", "jest"],
    "ignore": [
      "migrations/**"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  }
}
